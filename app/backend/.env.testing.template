# PM33 Atlassian Integration Testing Environment
# Copy this file to .env.testing and fill in your actual values

# =============================================================================
# ATLASSIAN JIRA CONFIGURATION
# =============================================================================

# Your Atlassian Cloud instance URL (required)
# Example: https://yourcompany.atlassian.net
JIRA_BASE_URL=https://your-domain.atlassian.net

# Your Jira API token (generate from: https://id.atlassian.com/manage-profile/security/api-tokens)
JIRA_API_TOKEN=your-api-token-here

# Your email address associated with the Atlassian account
JIRA_EMAIL=your-email@company.com

# Test project key for testing (create a dedicated test project)
JIRA_TEST_PROJECT_KEY=PM33TEST

# Optional: Additional test project for multi-project testing
JIRA_TEST_PROJECT_2=PM33TEST2

# =============================================================================
# PM33 SERVICE CONFIGURATION
# =============================================================================

# Database URL for Railway PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database

# Pinecone configuration for AI context storage
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment

# AI Service Keys for multi-AI orchestration
ANTHROPIC_API_KEY=your-claude-api-key
OPENAI_API_KEY=your-openai-api-key
TOGETHER_API_KEY=your-together-ai-key

# Analytics and Communication
POSTHOG_API_KEY=your-posthog-key
RESEND_API_KEY=your-resend-key

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test environment settings
TEST_MODE=true
DEBUG_LOGGING=true
SKIP_RATE_LIMITING=true

# Performance testing limits
TEST_CONCURRENT_REQUESTS=5
TEST_BULK_ITEM_COUNT=20
TEST_TIMEOUT_SECONDS=30

# Confidence score thresholds
MIN_FIELD_CONFIDENCE=0.80
TARGET_FIELD_CONFIDENCE=0.90
MIN_SUCCESS_RATE=0.95

# Test data configuration
TEST_EPIC_COUNT=2
TEST_STORY_COUNT=5
TEST_TASK_COUNT=10

# =============================================================================
# INTEGRATION TEST SPECIFIC
# =============================================================================

# Test user details (for permission testing)
TEST_USER_EMAIL=test-user@company.com
TEST_ADMIN_EMAIL=admin@company.com

# Known custom field IDs (fill after field discovery)
STORY_POINTS_FIELD_ID=customfield_10016
EPIC_LINK_FIELD_ID=customfield_10014

# Test issue type IDs (fill after issue type discovery)
EPIC_ISSUE_TYPE_ID=10000
STORY_ISSUE_TYPE_ID=10001
TASK_ISSUE_TYPE_ID=10002
SUBTASK_ISSUE_TYPE_ID=10003

# =============================================================================
# ERROR TESTING SCENARIOS
# =============================================================================

# Invalid credentials for testing error handling
INVALID_API_TOKEN=invalid-token-for-testing
INVALID_EMAIL=invalid@email.com
INVALID_BASE_URL=https://nonexistent.atlassian.net

# Non-existent project for permission testing
NONEXISTENT_PROJECT_KEY=NOPROJECT

# =============================================================================
# REPORTING CONFIGURATION
# =============================================================================

# Test report output directory
TEST_REPORT_DIR=./test_reports
TEST_SCREENSHOTS_DIR=./test_reports/screenshots

# Report formats
GENERATE_HTML_REPORT=true
GENERATE_JSON_REPORT=true
GENERATE_CSV_REPORT=true

# Notification settings
SLACK_WEBHOOK_URL=your-slack-webhook-for-test-results
EMAIL_REPORT_TO=dev-team@company.com