# PM33 Environment Variables
# Copy this file to .env.local and fill in your actual values

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3001
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/pm33_dev"

# Authentication
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL=http://localhost:3001

# Jira OAuth Integration
JIRA_CLIENT_ID="your-jira-oauth-client-id"
JIRA_CLIENT_SECRET="your-jira-oauth-client-secret"

# Linear OAuth Integration
LINEAR_CLIENT_ID="your-linear-oauth-client-id"
LINEAR_CLIENT_SECRET="your-linear-oauth-client-secret"

# Monday.com OAuth Integration
MONDAY_CLIENT_ID="your-monday-oauth-client-id"
MONDAY_CLIENT_SECRET="your-monday-oauth-client-secret"

# Asana OAuth Integration
ASANA_CLIENT_ID="your-asana-oauth-client-id"
ASANA_CLIENT_SECRET="your-asana-oauth-client-secret"

# AI Service API Keys
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
TOGETHER_API_KEY="your-together-ai-api-key"

# Analytics & Communication
POSTHOG_KEY="your-posthog-project-key"
RESEND_API_KEY="your-resend-api-key"

# Vector Database
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="your-pinecone-environment"

# Payment Processing
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# File Storage (Optional)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="pm33-uploads"

# Redis (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# Encryption
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# API Rate Limiting
RATE_LIMIT_REDIS_URL="redis://localhost:6379"

# Monitoring & Logging
SENTRY_DSN="your-sentry-dsn"
LOG_LEVEL="info"

# Feature Flags
ENABLE_DEMO_MODE=true
ENABLE_OAUTH_INTEGRATIONS=true
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true