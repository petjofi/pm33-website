{
  "version": 2,
  "framework": "nextjs", 
  "buildCommand": "cd app/frontend && npm run build",
  "outputDirectory": "app/frontend/.next",
  "functions": {
    "app/frontend/api/**/*.js": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_SITE_URL": "https://pm-33.io",
    "DATABASE_URL": "@database_url",
    "OPENAI_API_KEY": "@openai_api_key",
    "ANTHROPIC_API_KEY": "@anthropic_api_key"
  }
}